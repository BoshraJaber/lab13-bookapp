<section id="update-form">
    <p>Hide and show form</p>
    <form action="/books/<%books.id%>?_method=PUT" method="POST">
        <input type="hidden" value="put" name="_method">
        <input type="text" name="title" value="<%= books.title %>" placeholder="Populated Title">
        <input type="text" name="authors" value="<%=books.authors%>" placeholder="Populated Author">
        <input type="text" name="isbn" value="<%=books.isbn%>" placeholder="Populated ISBN"> 
        <input type="text" name="image" value="<%=books.image_url%>" placeholder="Populated Image URL">
        <input type="text" name="description" value="<%=books.description%>" placeholder="Populated Description">
        <button type="submit">Update Book</button>

    </form>
</section>



